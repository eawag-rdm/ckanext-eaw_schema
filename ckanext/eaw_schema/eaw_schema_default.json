{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "A reimplementation of the default CKAN dataset schema",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "free_tags_only": true,
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "A descriptive title",
      "display_property": "dct:title",
      "required": true
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "display_property": "dcat:landingPage",
      "required": true
    },
    {
      "field_name": "notes",
      "label": "Abstract",
      "form_snippet": "markdown.html",
      "form_placeholder": "A description of the package.",
      "display_property": "dct:description",
      "required": true
    },
    {
      "field_name": "notes-2",
      "label": "Notes",
      "form_snippet": "markdown.html",
      "form_placeholder": "Additional notes for data users or the Eawag data-manager",
      "display_property": "dct:description",
      "required": false
    },
    {
      "field_name": "tag_string",
      "label": "Keywords",
      "preset": "tag_string_autocomplete", 
      "form_placeholder": "eg. discharge, soil, taxonomy, LC-MS ...",
      "display_property": "dcat:keyword",
      "required": true
    },
    {
      "field_name": "variables",
      "label": "Variables",
      "preset": "multiple_select_js",
      "choices": [
	{
	  "value": "alkalinity",
	  "label": "alkalinity"
	},
	{
	  "value": "degradation_rate",
	  "label": "degradation Rate"
	},
	{
	 "value": "discharge",
	 "label": "discharge"
	},
	{
	  "value": "electric_conductivity",
	  "label": "electric conductivity"
	},
	{
	  "value": "concentration",
	  "label": "concentration"
	},
	{
	  "value": "precipitation",
	  "label": "precipitation"
	},
	{
	  "value": "pressure",
	  "label": "pressure"
	},
	{
	  "value": "respiration",
	  "label": "respiration"
	},
	{
	  "value": "temperature",
	  "label": "temperature"
	},
	{
	  "value": "turbidity",
	  "label": "turbidity"
	},
	{
	  "value": "groundwater_level",
	  "label": "groundwater Level"
	},
	{
	  "value": "none",
	  "label": "none"
	}
      ],
      "select_size": 5,
      "required": true
    },
    {
      "field_name": "generic-terms",
      "label": "Generic Terms",
      "preset": "multiple_select_js",
      "choices": [
	{
	  "value": "none",
	  "label": "none"
	},
 	{
	  "value": "micropollutants",
	  "label": "micropollutants"
	},
 	{
	  "value": "nutrients",
	  "label": "nutrients"
	},
 	{
	  "value": "heavy metals",
	  "label": "heavy metals"
	},
 	{
	  "value": "nano-particles",
	  "label": "nano-particles"
	},
 	{
	  "value": "organic matter",
	  "label": "organic matter"
	},
 	{
	  "value": "fish",
	  "label": "fish"
	},
 	{
	  "value": "algae",
	  "label": "algae"
	},
	{
	  "value": "invertebrates",
	  "label": "invertebrates"
	},
	{
	  "value": "macrophytes",
	  "label": "macrophytes"
	}
      ],
      "select_size": 5,
      "required": true
    },
    {
      "field_name": "systems",
      "label": "Systems",
      "preset": "multiple_select_js",
      "vocabulary": "systems",
      "select_size": 5,
      "required": true
    },
    {
      "field_name": "species",
      "label": "Species",
      "form_snippet": "text_medium.html",
      "form_placeholder": "e.g. Dictyosphaerium Anabaena",
      "required": false
    },
    {
      "field_name": "substances",
      "label": "Substances",
      "form_snippet": "text_medium.html",
      "form_placeholder": "e.g. 2-Methyl-4-amino-6-methoxy-s-triazine",
      "required": false
    },
    {
      "field_name": "timerange",
      "label": "Timerange",
      "validators": "not_empty vali_daterange",
      "output_validators": "output_daterange",
      "form_placeholder": "e.g. 2016-03 TO 2016-05",
      "form_snippet": "text_medium.html",
      "modal_text": "timerange_help"
    },
    {
      "field_name": "spatial",
      "label": "Spatial Extent",
      "form_snippet": "text_medium.html",
      "modal_text": "spatial_help",
      "form_placeholder": "{\"type\": \"Point\", \"coordinates\": [8.6124600, 47.4031100]}",
      "required": true,
      "display_snippet": null
    },
    {
      "field_name": "geographic-name",
      "label": "Geographic Name",
      "form_snippet": "text_medium.html",
      "form_placeholder": "e.g. Greifensee",
      "required": false
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "eaw_schema_dataset_organization",
      "required": true,
      "modal_text": "access_help"
    },
    {
      "field_name": "status",
      "label": "Status",
      "form_attrs": {"class": "medinput"},
      "required": true,
      "display_property": "adms:status",
      "preset": "select_short",
      "choices": [
	{
	  "value": "incomplete",
	  "label": "incomplete"
	},
	{
	  "value": "complete",
	  "label": "complete"
	},
	{
	  "value": "reviewed",
	  "label": "reviewed"
	}
      ]
    },
    {
      "field_name": "author",
      "form_snippet": "eaw-wsl-group2json.html",
      "label": "Author Information",
      "validators": "eaw_wsl_group2json",
      "subfields": [
          {
          "field_name": "name",
          "label": "Name"
          },
          {
          "field_name": "email",
          "label": "Email"
          }
      ]
     },
    {
      "field_name": "maintainer",
      "label": "Curator",
      "form_snippet": "text_medium.html",
      "form_placeholder": "Otto Mayerb√§r <mayo@eawag.ch>",
      "display_property": "datacite:datacurator",
      "modal_text": "curator_help"
    },
    {
      "field_name": "usage_contact",
      "label": "Usage Contact",
      "form_snippet": "text_medium.html",
      "form_placeholder": "Pat Permission <pep@eawag.ch>",
      "modal_text": "usage_contact_help"
    },
    {
      "field_name": "open_data",
      "label": "Flags",
      "form_snippet": "eaw_multiple_checkbox.html",
      "display_snippet": "multiple_choice.html",
      "choices": [
	{
	  "value": "open_data",
	  "label": "Open Data candidate",
	  "modal_text": "open_data_help",
	  "autocheckif": "doi_wanted"
	},
	{
	  "value": "doi_wanted",
	  "label": "DOI wanted",
	  "modal_text": "doi_wanted_help",
	  "autocheckif": false
	}
      ]
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "e.g. table_arsenic",
      "required": true
    },
    {
      "field_name": "resource_type",
      "label": "Resource Type",
      "preset": "select",
      "vocabulary": "resource_type",
      "required": true
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "notes",
      "label": "Notes",
      "form_snippet": "markdown.html",
      "form_placeholder": "General notes to data users or the Eawag data manager"
    }
  ]
}
