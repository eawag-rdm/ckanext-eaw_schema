{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "A reimplementation of the default CKAN dataset schema",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "free_tags_only": true,  
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "A descriptive title",
      "display_property": "dct:title",
      "required": true
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "display_property": "dcat:landingPage",
      "required": true
    },
    {
      "field_name": "notes",
      "label": "Abstract",
      "form_snippet": "markdown.html",
      "form_placeholder": "A description of the package.",
      "display_property": "dct:description",
      "required": true
      },
    {
      "field_name": "tag_string",
      "label": "Keywords",
      "preset": "eaw_tag_string_autocomplete", 
      "form_placeholder": "eg. discharge, soil, taxonomy, LC-MS ...",
      "display_property": "dcat:keyword",
      "required": true
    },
    {
      "field_name": "variables",
      "label": "Variables",
      "preset": "multiple_select_js",
      "vocabulary": "variables",
      "select_size": 5,
      "required": true
    },
    {
      "field_name": "systems",
      "label": "Systems",
      "preset": "multiple_select_js",
      "vocabulary": "systems",
      "select_size": 5,
      "required": true
    },
    {
      "field_name": "timerange",
      "label": "Timerange",
      "form_attrs": {"class": "medinput"},
      "validators": "vali_daterange",
      "output_validators": "output_daterange",
      "form_placeholder": "e.g. 2016-03 TO 2016-05",
      "form_snippet": "timerange.html"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "status",
      "label": "Status",
      "form_attrs": {"class": "shortinput"},
      "required": true,
      "display_property": "adms:status",
      "preset": "select_short",
      "choices": [
	{
	  "value": "incomplete",
	  "label": "incomplete"
	},
	{
	  "value": "complete",
	  "label": "complete"
	},
	{
	  "value": "reviewed",
	  "label": "reviewed"
	}
      ]
    },
    {
      "field_name": "maintainer",
      "label": "Curator",
      "required": "true",
      "form_snippet": "text_short.html",
      "form_placeholder": "Johann Meierb√§r <joe@eawag.ch>",
      "display_property": "datacite:datacurator",
      "help_text": "Person responsible for completeness and quality of data and meta-data.",
      "help_inline": true
    },
    {
      "field_name": "author",
      "label": "Author",
      "preset": "repeating_text_js",
      "form_placeholder": "joe@eawag.ch",
      "display_property": "dc:creator",
      "help_text": "Persons who take scientific credit. Required IFF valid for all resources of the package",
      "help_inline": true
    }

  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "e.g. table_arsenic",
      "required": true
    },
    {
      "field_name": "author",
      "label": "Author",
      "preset": "repeating_text_js",
      "required": false,
      "form_placeholder": "e.g. joe@eawag.ch",
      "display_property": "dc:creator",
      "help_text": "Persons who take scientific credit for this resource unless given on the package-level.",
      "help_inline": true
    },
    {
      "field_name": "resource_type",
      "preset": "multiple_select_js",
      "label": "Resource Type",
      "vocabulary": "resource_type",
      "required": true
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "citation",
      "label": "Citation",
      "form_snippet": "markdown.html",
      "form_placeholder": "A text snippet that should be used to cite this resource."
    },
    {
      "field_name": "Usage notes",
      "prepend_text": "<b>Unless otherwise noted, this resource is made vailable under either the<ul><li><a href=\"http://www.gnu.org/licenses/agpl-3.0.en.html\">GNU Affero General Public License 3.0</a> (for software), or the</li><li><a href=\"http://creativecommons.org/licenses/by-nc/4.0/\">Creative Commons Attribution-NonCommercial 4.0 International License</a> (for other material).</li></ul></b>",
      "form_snippet": "markdown_prepend.html",
      "form_placeholder": "Describe precisely any usage restrictions or relaxations that deviate from the default licensing."
    }
  ]
}
