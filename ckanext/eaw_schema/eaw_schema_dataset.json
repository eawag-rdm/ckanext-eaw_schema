	{
	  "value": "Dataset",
	  "label": "Dataset"
	},
	{
	  "value": "Collection",
	  "label": "Collection"
	},
	{
	  "value": "Text",
	  "label": "Text"
	},
	{
	  "value": "Image",
	  "label": "Image"
	},
	{
	  "value": "Audiovisual",
	  "label": "Audiovisual"
	},
	{
	  "value": "Software",
	  "label": "Software"
	},
	{
	  "value": "Sound",
	  "label": "Sound"
	},
	{
	  "value": "GeospatialData",
	  "label": "Geospatial Data"
	},
	{
	  "value": "Model",
	  "label": "Model"
	},
	{
	  "value": "Event",
	  "label": "Event"
	},
	{
	  "value": "InteractiveResource",
	  "label": "Interactive Resource"
	},
	{
	  "value": "PhysicalObject",
	  "label": "Physical Object"
	},
	{
	  "value": "Service",
	  "label": "Service"
	},
	{
	  "value": "Workflow",
	  "label": "Workflow"
	},
	{
	  "value": "Other",
	  "label": "Other"
	}	   
      ], 
      "preset": "select_short", 
      "label": "Resource Type", 
      "field_name": "resource_type"
    }, 
    {
      "modal_text": "res_notes_help", 
      "required": false, 
      "form_snippet": "eaw_schema_markdown.html", 
      "label": "Notes", 
      "form_placeholder": "Additional notes for data users, the Eawag data-manager, or yourself.", 
      "field_name": "description"
